{
  "name": "warden_bedgraph_to_bigwig",
  "title": "WARDEN: Generate BigWig",
  "summary": "Generate BigWig files from bed coverage file",
  "dxapi": "1.0.0",
  "version": "1.1.0",
  "inputSpec": [
    {
      "name": "bedgraph_file",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "output_prefix",
      "class": "string",
      "optional": false,
      "help": ""
    },
    {
      "name": "genome_sizes_file",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "is_sorted",
      "class": "boolean",
      "optional": true,
      "default": true,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "bigwig",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 12
      }
    },
    "interpreter": "bash",
    "file": "src/warden_bedgraph_to_bigwig.sh",
    "distribution": "Ubuntu",
    "release": "16.04",
    "version": "0"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "azure:westus": {
      "systemRequirements": {
        "*": {
          "instanceType": "azure:mem2_ssd1_x4"
        }
      }
    },
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem2_ssd1_x4"
        }
      }
    }
  },
  "authorizedUsers": [
    "org-stjude_cloud",
    "org-stjude_cloud_app_runners"
  ]
}