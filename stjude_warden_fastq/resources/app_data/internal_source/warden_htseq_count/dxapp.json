{
  "name": "warden_htseq_count",
  "title": "WARDEN: HTSeq-Count",
  "summary": "Generate per gene read (pair) counts",
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "inputSpec": [
    {
      "name": "input_bam",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bam",
        "*.sam"
      ],
      "help": ""
    },
    {
      "name": "annotation_file",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "order",
      "label": "Read ordering",
      "class": "string",
      "choices": [
        "name",
        "pos"
      ],
      "optional": false
    },
    {
      "name": "prefix",
      "class": "string",
      "optional": false,
      "help": ""
    },
    {
      "name": "strand",
      "class": "string",
      "choices": [
        "yes",
        "no",
        "reverse"
      ],
      "help": "yes=strand specific RNA-SEQ.  no=read does not have to be strand specific.  reverse=read on opposite strand"
    },
    {
      "name": "feature_type",
      "label": "Feature type to use from GTF file",
      "class": "string",
      "group": "Advanced Options",
      "choices": [
        "exon",
        "gene",
        "transcript",
        "CDS",
        "start_codon",
        "stop_codon",
        "UTR",
        "Selenocysteine"
      ],
      "default": "gene"
    },
    {
      "name": "id_attribute",
      "label": "GTF attribute to use as ID",
      "class": "string",
      "group": "Advanced Options",
      "choices": [
        "gene_id",
        "gene_name",
        "transcript_id",
        "transcript_name"
      ],
      "default": "gene_name"
    },
    {
      "name": "mode",
      "label": "Mode to handle overlapping reads",
      "class": "string",
      "group": "Advanced Options",
      "choices": [
        "union",
        "intersection-strict",
        "intersection-empty"
      ],
      "default": "union"
    },
    {
      "name": "nonunique",
      "label": "Mode for non-unique reads",
      "class": "string",
      "group": "Advanced Options",
      "choices": [
        "none",
        "all"
      ],
      "default": "none"
    },
    {
      "name": "secondary_alignments",
      "label": "Mode for secondary alignments",
      "class": "string",
      "group": "Advanced Options",
      "choices": [
        "score",
        "ignore"
      ],
      "default": "score"
    },
    {
      "name": "supplementary_alignments",
      "label": "Mode for supplementary alignments",
      "class": "string",
      "group": "Advanced Options",
      "choices": [
        "score",
        "ignore"
      ],
      "default": "score"
    },
    {
      "name": "gene_length_file",
      "class": "file",
      "optional": true,
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "htseq_counts",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "fpkm",
      "class": "file",
      "optional": true,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "fpkm_log2",
      "class": "file",
      "optional": true,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "gene_lengths",
      "class": "file",
      "optional": true,
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 24
      }
    },
    "interpreter": "bash",
    "file": "src/warden_htseq_count.sh",
    "distribution": "Ubuntu",
    "release": "16.04",
    "version": "0",
    "execDepends": [
      {
        "name": "build-essential"
      },
      {
        "name": "python2.7-dev"
      }
    ]
  },
  "regionalOptions": {
    "azure:westus": {
      "systemRequirements": {
        "*": {
          "instanceType": "azure:mem2_ssd1_x2"
        }
      }
    },
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x4"
        }
      }
    }
  },
  "access": {
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  },
  "authorizedUsers": [
    "org-stjude_cloud",
    "org-stjude_cloud_app_runners"
  ]
}