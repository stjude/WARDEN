{
  "name": "warden_name_sort_bam",
  "title": "WARDEN: Sort BAM by name",
  "summary": "BAM Output generated in alignment phase is sorted by read name for analysis by HTSeq-count",
  "dxapi": "1.0.0",
  "version": "1.0.4",
  "inputSpec": [
    {
      "name": "input_bam",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bam"
      ],
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "output_bam",
      "class": "file",
      "patterns": [
        "*.bam"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 24
      }
    },
    "interpreter": "bash",
    "file": "src/warden_name_sort_bam.sh",
    "distribution": "Ubuntu",
    "release": "16.04",
    "version": "0"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "azure:westus": {
      "systemRequirements": {
        "*": {
          "instanceType": "azure:mem2_ssd1_x2"
        }
      }
    },
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x4"
        }
      }
    }
  },
  "authorizedUsers": [
    "org-stjude_cloud",
    "org-stjude_cloud_app_runners"
  ]
}